<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity">


    <ImageView
        android:layout_height="250dp"
        android:layout_width="250dp"
        app:srcCompat="@drawable/chat1"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        android:layout_marginBottom="424dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="61dp"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        android:layout_marginEnd="156dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="166dp"
        android:id="@+id/phnLevel"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.625"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#020202"
        android:text="Verifing..."/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="301dp"
        android:id="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/phnLevel"
        android:textColor="#B17474"
        android:text="Enter the OTP to Verify Your Phone Number"/>


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="135dp"
        android:layout_width="385dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.575">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="314dp"
        android:id="@+id/otpView"
        android:textAlignment="center"
        android:itemBackground="@color/grey"
        android:inputType="number"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:layout_marginTop="15dp"
        android:id="@+id/next"
        android:text="Next"/>

</LinearLayout>
    />


</androidx.constraintlayout.widget.ConstraintLayout>