<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="183dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="482dp"
        android:src="@drawable/avater"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:layout_height="27dp" android:layout_width="175dp" android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="25dp" android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/profilePicture" app:layout_constraintBottom_toTopOf="@+id/cardView" android:textStyle="bold" android:textColor="#1E1D1D" android:textAlignment="center" android:text="Profile Information" android:layout_marginEnd="106dp" android:layout_marginStart="111dp"/>


    <androidx.cardview.widget.CardView android:layout_height="134dp" android:layout_width="353dp" android:id="@+id/cardView" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="263dp" android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="16dp" android:layout_marginStart="22dp">


    <LinearLayout android:layout_margin="10dp" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <EditText android:layout_height="56dp" android:layout_width="match_parent" android:id="@+id/name" android:text="Name" android:inputType="textPersonName" android:hint="Name" android:ems="10"/>

    <Button android:layout_height="58dp" android:layout_width="match_parent" android:id="@+id/save" android:layout_marginTop="10dp" android:text="Save"/>

</LinearLayout>

</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>